[Unit]
Description=uWSGI nbpmap server instance
After=syslog.target

[Service]
ExecStart=/apps/itgc-2022-map/venv/bin/uwsgi -H /apps/venv --master --processes 4 --threads 2 --http :5000 --manage-script-name --python-path /apps/itgc-2022-map --mount /=wsgi:app
RuntimeDirectory=/apps/itgc-2022-map
Restart=always
KillSignal=SIGQUIT
Type=notify
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target

